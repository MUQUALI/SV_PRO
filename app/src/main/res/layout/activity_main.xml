<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_main"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorDark"
        app:title="MENU"
        app:titleMarginStart="40dp"
        />


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:id="@+id/home_menu"
        android:layout_height="180dp"
        android:translationZ="10dp"
        android:elevation="15dp"
        android:padding="15dp"
        android:background="@drawable/rounded_shadow_view"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        android:onClick="homeItemClick"
        >

        <ImageView
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_gravity="center"
            android:src="@drawable/home_ic">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_faculty"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm Nhà Trọ"
                android:padding="15dp"
                android:textColor="#fff"
                android:background="@drawable/rounded_text_view"
                android:textSize="15dp"
                android:textFontWeight="25"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:text="Giúp các bạn trao đổi, tìm trọ, tìm người ở ghép"
                    android:drawablePadding="2dp"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:id="@+id/job_menu"
        android:layout_height="180dp"
        android:translationZ="10dp"
        android:elevation="15dp"
        android:padding="15dp"
        android:background="@drawable/rounded_shadow_view"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        >

        <ImageView
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_gravity="center"
            android:src="@drawable/work_ic">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tìm Việc Làm"
                android:padding="15dp"
                android:textColor="#fff"
                android:background="@drawable/rounded_text_view"
                android:textSize="15dp"
                android:textFontWeight="25"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:text="Giúp các bạn trao đổi, tìm công việc làm thêm, công việc chuyên môn"
                    android:drawablePadding="2dp"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:id="@+id/learn_menu"
        android:layout_height="180dp"
        android:translationZ="10dp"
        android:elevation="15dp"
        android:padding="15dp"
        android:background="@drawable/rounded_shadow_view"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        >

        <ImageView
            android:layout_width="350px"
            android:layout_height="350px"
            android:layout_gravity="center"
            android:src="@drawable/learn_ic">

        </ImageView>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trao đổi học tập"
                android:padding="15dp"
                android:textColor="#fff"
                android:background="@drawable/rounded_text_view"
                android:textSize="15dp"
                android:textFontWeight="25"
                android:layout_marginHorizontal="10dp"
                android:gravity="center"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:padding="10dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/rounded_text_view"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="14dp"
                    android:text="Giúp các bạn trao đổi kiến thức, bài tập, học nhóm..."
                    android:drawablePadding="2dp"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>